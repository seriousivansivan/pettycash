<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= typeof title !== 'undefined' ? title : 'Petty Cash' %></title>

  <!-- Bootswatch theme (Lux). Swap theme here anytime: https://bootswatch.com -->
  <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/lux/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <!-- Simple-DataTables -->
  <link href="https://cdn.jsdelivr.net/npm/simple-datatables@9.0.0/dist/style.css" rel="stylesheet">

  <style>
    body { background:#f8fafc; }
    .container-xxl { max-width: 1320px; }
    .toolbar .btn { min-width: 160px; }
    .brand { font-weight:700; letter-spacing:.3px; }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg bg-body-tertiary mb-3 shadow-sm">
    <div class="container-xxl">
      <a class="navbar-brand brand" href="#">
        <img src="/logos/Panthera.png" alt="" width="50px"> Petty Cash
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topnav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div id="topnav" class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto gap-2">
          <% if (user && user.role === 'admin') { %>
            <li class="nav-item"><a class="nav-link" href="/dashboard"><i class="bi bi-speedometer2 me-1"></i>Dashboard</a></li>
            <li class="nav-item"><a class="nav-link" href="/users"><i class="bi bi-people me-1"></i>Users</a></li>
            <li class="nav-item"><a class="nav-link" href="/companies"><i class="bi bi-buildings me-1"></i>Companies</a></li>
          <% } %>
          <li class="nav-item"><a class="nav-link" href="/history"><i class="bi bi-clock-history me-1"></i>Histories</a></li>
          <% if (user && user.role === 'admin') { %>
            <li class="nav-item"><a class="nav-link" href="/history/deleted"><i class="bi bi-trash me-1"></i>Trash</a></li>
          <% } %>
          <% if (user && user.role !== 'admin') { %>
            <li class="nav-item"><a class="nav-link" href="/form"><i class="bi bi-ui-checks-grid me-1"></i>Form</a></li>
          <% } %>
          <li class="nav-item"><a class="nav-link" href="/profile"><i class="bi bi-person-gear me-1"></i>Profile</a></li>
          <li class="nav-item"><a class="btn btn-outline-secondary ms-lg-2" href="/logout"><i class="bi bi-box-arrow-right me-1"></i>Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>